#include <stdio.h>
#include <string.h>

int main() {
    char a[100];  // input string
    int freq[26] = {0};  // frequency array initialized to 0 for each alphabet (a to z)
    
    // Input string
    printf("Enter a string: ");
    fgets(a, sizeof(a), stdin);  // Read a string from the user
    
    // Traverse the string and count frequency of each alphabet
    for (int i = 0; i < strlen(a); i++) {
        if ((a[i] >= 'a' && a[i] <= 'z')) {
            freq[a[i] - 'a']++;  // Increase the frequency for lowercase letters
        } else if (a[i] >= 'A' && a[i] <= 'Z') {
            freq[a[i] - 'A']++;  // Increase the frequency for uppercase letters
        }
    }
    
    // Print the frequency of each alphabet
    printf("Alphabet frequency in the string:\n");
    for (int i = 0; i < 26; i++) {
        if (freq[i] > 0) {
            printf("%c: %d\n", i + 'a', freq[i]);
        }
    }
    
    return 0;
}
